<div>
    {{#with page_header}}
    <h1 class="text-center">{{title}}</h1>
    <div class="text-center text-uppercase">{{description}}</div>
    {{/with}}
</div>

<br>

<div>
    {{#with section}}

    <div>
        {{#with about_us}}
        <div class="card">
            <div class="card-body">
                {{#with title_list}}
                <div class="display-6 text-end">{{main}}</div>
                <h2 class="text-end">{{sub}}</h2>
                {{/with}}
                <div>
                    {{#with button}}
                    <button class="btn btn-outline-info">{{text}}</button>
                    {{/with}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <div>
        {{#with advantage}}
        <div class="card">
            <div class="card-body">
                <div class="display-5">{{title}}</div>
                <br>
                {{#with efficiency}}
                <div class="card">
                    <div class="card-body">
                        <div class="display-4">{{title}}</div>
                        <br>
                        <h6>{{sub_title}}</h6>
                        <br>
                        <div>{{description}}</div>
                        <br>
                        <button class="btn btn-outline-warning">{{button}}</button>
                    </div>
                </div>
                {{/with}}
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with innovation}}
                        <div class="display-4 text-center">{{title}}</div>
                        <br>
                        <h6 class="text-center">{{sub_title}}</h6>
                        <br>
                        <div class="text-center">{{description}}</div>
                        <br>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with collaboration}}
                        <div class="display-4 text-end">{{title}}</div>
                        <br>
                        <h6 class="text-end">{{sub_title}}</h6>
                        <br>
                        <div class="text-end">{{description}}</div>
                        <br>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </div>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with agreement}}
            <div class="display-5">{{title}}</div>
            <br>
            {{#with info}}
            <div class="card">
                <div class="card-body">
                    <h5>{{sub_title}}</h5>
                    <br>
                    {{#with detail}}
                    <div class="card">
                        <div class="card-body">
                            <div>{{text}}</div>
                            <br>
                            <button class="btn btn-success">{{button}}</button>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            {{/with}}
        </div>
    </div>
    {{/with}}
</div>