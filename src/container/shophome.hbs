<main class="p-5">
    <div class="row">
        <div class="col-12 mb-5">
            <div class="card">
                <div class="nav">
                    {{#with navigation}}
                    {{#each links}}
                    <a href="{{href}}" class="nav-link pt-3 pb-3">{{text}}</a>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>
    </div>

    <div>
        {{#with newsBlock}}
        <div class="display-6 text-center mb-3">
            <b>{{title}}</b>
        </div>

        <section class="col-12">
            <div class="row">
                {{#each cards}}
                <div class="col-3">
                    <div class="card m-1 text-bg-dark">
                        <div class="card-header">{{title}}
                            {{#if isNew}}
                            <span class="
                            {{#if isNew}}
                            badge text-bg-success rounded-pill text-uppercase
                            {{/if}}">New</span>
                            {{/if}}

                            {{#if isTop}}
                            <span class="
                            {{#if isTop}}
                            badge text-bg-danger rounded-pill text-uppercase
                            {{/if}}">Top</span>
                            {{/if}}
                        </div>
                        <div class="p-2">{{description}}</div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
        {{/with}}
    </div>


    <hr class="mt-5 mb-5">

    <div>
        {{#with goodsBlock}}
        <section class="col-12 mb-5">
            <div class="row">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="col-3">
                        <div class="nav-item">
                            <a href="#" class="nav-link
                        {{#if isActive}}
                        active
                        {{/if}}

                        {{#if isDisabled}}
                        disabled
                        {{/if}}
                        ">{{text}}</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
        </section>

        <section class="col-12">
            <div class="row">
                {{#each cards}}
                <section class="col-4 mb-5">
                    <div class="card">
                        <img class="card-img-top" src="{{image}}">
                        <div class="card-body p-3">
                            <div>
                                <h5 class="card-title">{{title}}</h5>
                                {{#if isNew}}
                                <span class="
                                {{#if isNew}}
                                badge text-bg-primary rounded-pill text-uppercase
                                {{/if}}
                                ">New</span>
                                {{/if}}

                                {{#if isHot}}
                                <span class="
                                {{#if isHot}}
                                badge text-bg-success rounded-pill text-uppercase
                                {{/if}}
                                ">Hot</span>
                                {{/if}}
                            </div>
                            <p>{{description}}</p>
                        </div>
                    </div>
                </section>
                {{/each}}
            </div>
        </section>
        {{/with}}
    </div>

    <hr class="mt-5 mb-5">

    <div>
        {{#with subscribe}}
        <section class="col-12">
            <div class="card text-bg-dark pt-2 pb-1 ps-2">
                <h2>{{header}}</h2>
                <div>{{description}}</div>
                <section class="col-3 mt-2">
                    {{#each buttons}}
                    <button class="btn btn-primary mb-2">{{text}}</button>
                    {{/each}}
                </section>
            </div>
        </section>
        {{/with}}
    </div>

    <hr class="mt-5 mb-5">

    <div>
        {{#with service}}
        <section class="col-12">
            <div class="card text-bg-success pt-2 pb-1 text-center">
                <h2 class="mb-2">{{title}}</h2>
                <div class="mb-2">{{description}}</div>
                {{#each buttons}}
                <a href="{{link}}">
                    <button class="btn btn-primary">{{text}}</button>
                </a>
                {{/each}}
            </div>
        </section>
        {{/with}}
    </div>

    <hr class="mt-5 mb-5">

    <footer>
        <section class="col-10">
            <div class="row">
                {{#each footer}}
                {{#each this}}
                <div class="nav col-3">
                    <div class="nav-item">
                        <a href="{{link}}" class="nav-link
                            {{#if isDisabled}}
                            disabled
                            {{/if}}
                            ">{{text}}"
                        </a>
                    </div>
                </div>
                {{/each}}
                {{/each}}
            </div>
        </section>
    </footer>
</main>