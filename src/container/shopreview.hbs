<main class="p-5">
    <div class="row">
        <div class="col-12">
            <div class="card mb-5">
                <div class="nav">
                    {{#with navigation}}
                    {{#each links}}
                    <div class="nav-item">
                        <a href="{{href}}" class="nav-link pt-3 pb-3">{{text}}</a>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>

        <div>
            {{#with formBlock}}
            <div class="row">
                <div class="col-8">
                    <h1 class="pb-2">{{header}}</h1>

                    <div class="pb-3">
                        {{#with rating}}
                        <div>{{title}}: {{value}}</div>
                        {{/with}}
                    </div>

                    <div>
                        {{#with actionBlock}}
                        <div class="nav nav-tabs mb-3">
                            {{#each tabs}}
                            <div class="nav-item">
                                <div class="nav nav-link 
                        {{#if isActive}}
                        active
                        {{/if}}
                        ">
                                    {{#if isActive}}
                                    <b>{{text}}</b>
                                    {{else}}
                                    {{text}}
                                    {{/if}}
                                </div>
                            </div>
                            {{/each}}
                        </div>

                        <div class="pt-4 pb-4">
                            <hr>
                        </div>

                        <div>
                            {{#with report}}
                            <div class="card">
                                <div class="ms-3 mt-3 mb-2">{{title}}</div>

                                <div>
                                    {{#with button}}
                                    <a href="{{link}}"><button class="btn btn-primary ms-3 mb-3">{{text}}</button></a>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>

                    <div class="pt-4 pb-4">
                        <hr>
                    </div>

                    <div>
                        {{#with feedbackBlock}}
                        <h3 class="pb-5">{{title}}</h3>

                        <div>
                            {{#each buttons}}
                            <a href="{{link}}"><button class="
                        {{#if isWarning}}
                        btn btn-warning me-2
                        {{/if}}

                        {{#if isSuccess}}
                        btn btn-success me-2
                        {{/if}}

                        {{#if isDanger}}
                        btn btn-danger
                        {{/if}}
                        ">{{text}}</button></a>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-4">
                    {{#with goodsInfo}}
                    <div class="pb-3">
                        <div class="card">
                            <img width="150" src="{{photo}}" class="ms-3 mt-3 mb-3">
                            <div class="ms-3 mb-3">{{name}}</div>
                        </div>
                    </div>

                    <div class="pb-3">
                        <div class="card">
                            <b class="ms-3 mt-3 mb-2">{{price}}</b>
                            <div class="ms-3 mb-2">
                                {{#if inMarket}}
                                Є в наявності
                                {{/if}}
                            </div>

                            <div>
                                {{#each buttons}}
                                <a href="{{link}}"><button class="
                            {{#if isPrimary}}
                            btn btn-primary ms-3 mb-2 me-5
                            {{/if}}

                            {{#if isSecondary}}
                            btn btn-secondary ms-3 mb-3
                            {{/if}}
                            ">{{text}}</button></a>
                                {{/each}}
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="card">
                            {{#with seller}}
                            <div class="ms-3 mt-3 mb-3">{{title}}: <b>{{value}}</b></div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>

        <div class="pt-4 pb-4">
            <hr>
        </div>

        <div>
            {{> reviewItem}}
        </div>

        <div class="text-bg-success text-center">
            {{#with service}}
            <h2 class="mt-3 mb-2">{{title}}</h2>
            <div class="mb-3">{{description}}</div>

            <div class="mb-3">
                {{#each buttons}}
                <a href="{{link}}"><button class="btn btn-primary">{{text}}</button></a>
                {{/each}}
            </div>
            {{/with}}
        </div>

        <div class="pt-5 pb-2">
            <hr>
        </div>

        <footer>
            <section class="col-12">
                <div class="row">
                    {{#each footer}}
                    {{#each this}}
                    <div class="nav col-3">
                        <div class="nav-item">
                            <a class="nav-link
                            {{#if isActive}}
                            disabled
                            {{/if}}
                            " href="{{link}}">{{text}}</a>
                        </div>
                    </div>
                    {{/each}}
                    {{/each}}
                </div>
            </section>
        </footer>
    </div>
</main>