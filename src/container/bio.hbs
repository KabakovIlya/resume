<div>
    <div>
        <h1>{{name}}</h1>
    </div>
    <div>
        <b>Birth date: {{birthdate}};</b>
    </div>

    <br>

    <div>
        <b>Birth place: {{birthplace}};</b>
    </div>

    <br>

    <div>
        <b>Death date: {{deathdate}};</b>
    </div>

    <br>

    <div>
        <b>Nationality: {{nationality}};</b>
    </div>

    <br>

    <div>
        <b>Occupation: {{occupation}};</b>
    </div>

    <br>
    <hr>

    <div>
        <div>
            <h3>Known for:</h3>
        </div>

        <ul>
            {{#each known_for}}
            <li>
                <em>{{this}}</em>
            </li>
            {{/each}}
        </ul>
    </div>

    <br>
    <hr>

    <div>
        <div>
            <h3>Education:</h3>
        </div>

        {{#each education}}
        <div>Degree: <em>{{degree}}</em>;</div>
        <div>Field: <em>{{field}}</em>;</div>
        <div>Institution: <em>{{institution}}</em>;</div>
        <div>Year: <em>{{year}}</em>;</div>
        {{/each}}
    </div>

    <br>
    <hr>

    <div>
        <div>
            <h3>Natable publications:</h3>
        </div>
        <ul>
            {{#each notable_publications}}
            <li>
                <div>Title: <em>{{title}}</em>;</div>
                <div>Year: <em>{{year}}</em>;</div>
                <div>Publisher: <em>{{publisher}}</em>;</div>
            </li>
            <br>
            {{/each}}
        </ul>
    </div>

    <hr>

    <div>
        <div>
            <h3>Partners:</h3>
        </div>

        <ul>
            {{#each partners}}
            <li>
                <div>Name: <em>{{name}}</em>;</div>
                <div>Relationship: <em>{{relationship}}</em>;</div>
                <div>Years: <em>{{years}}</em>;</div>
            </li>
            <br>
            {{/each}}
        </ul>
    </div>

    <hr>

    <div>
        <div>
            <h3>Awards:</h3>
        </div>

        {{#each awards}}
        <div>Title: <em>{{title}}</em>;</div>
        <div>Year: <em>{{year}}</em>;</div>
        <div>Description: <em>{{description}}</em>;</div>
        {{/each}}
    </div>

    <br>
    <hr>

    <div>
        <div>
            <h3>Influences:</h3>
        </div>

        <div>
            <ul>
                {{#each influences}}
                <li>
                    <em>{{this}}</em>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>


    <hr>

    <div>
        <div>
            <h3>Influenced:</h3>
        </div>

        <div>
            <ul>
                {{#each influenced}}
                <li>
                    <em>{{this}}</em>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div>
        <div>
            <h3>Quotes:</h3>
        </div>

        <div>
            <ul>
                {{#each quotes}}
                <li>
                    <em>{{this}}</em>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div>
        <div>
            <h3>Major discoveries:</h3>
        </div>

        <div>
            {{#each major_discoveries}}
            <div>Title: <em>{{title}}</em>;</div>
            <div>Year: <em>{{year}}</em>;</div>
            <div>Description: <em>{{description}}</em></div>
            {{/each}}
        </div>
    </div>

    <hr>

    <div>
        <div>
            <h3>Contributions</h3>
        </div>

        <div>
            {{#with contributions}}
            <div>Title: <em>{{title}}</em>;</div>
            <div>Description: <em>{{description}}</em></div>
            <div>Year: <em>{{year}}</em>;</div>
            <div>Field: <em>{{field}}</em>;</div>
            {{/with}}
        </div>
    </div>
</div>